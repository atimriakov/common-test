{
  "name": "@atimriakov/common",
  "version": "0.0.1",
  "description": "Common react library for PFM App",
  "main": "dist/atimriakov-common.js",
  "module": "dist/esm/atimriakov-common.js",
  "typings": "dist/esm/atimriakov-common.d.ts",
  "repository": "https://githib.com/",
  "author": "",
  "license": "",
  "scripts": {
    "start": "webpack serve",
    "start:watch": "webpack --watch",
    "start:standalone": "webpack serve --env standalone --env buildEsm",
    "deploy": "npm run build && npm publish",
    "build": "webpack --mode=production && tsc && npm run rename",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production",
    "analyze": "webpack --mode=production --env analyze",
    "lint": "eslint src --ext js,ts,tsx",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "test": "cross-env BABEL_ENV=test jest",
    "watch-tests": "cross-env BABEL_ENV=test jest --watch",
    "coverage": "cross-env BABEL_ENV=test jest --coverage",
    "rename": "node -e \"require('fs').renameSync('./dist/src', './dist/esm')\"",
    "install:dependencies": "echo no dependencies"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && concurrently npm:test npm:lint"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/runtime": "^7.19.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.2.0",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.3.3",
    "@types/systemjs": "^6.1.1",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@types/webpack-env": "^1.18.0",
    "babel-jest": "^29.2.1",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-ts-react-important-stuff": "^3.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "file-loader": "^6.2.0",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.2.1",
    "jest-cli": "^29.2.1",
    "jest-environment-jsdom": "^29.2.2",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "single-spa-react": "^5.0.0",
    "ts-config-single-spa": "^3.0.0",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-config-single-spa-react": "^4.0.3",
    "webpack-config-single-spa-react-ts": "^4.0.3",
    "webpack-config-single-spa-ts": "^4.1.2",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@okta/okta-auth-js": "^7.0.1",
    "@okta/okta-react": "^6.7.0",
    "classnames": "^2.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "5.3.4"
},
"publishConfig": {
   "@atimriakov:registry": "https://npm.pkg.github.com"
 }
}
